<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add__ingredient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="skyline.skyline1.act_add_Ingredient">

    <TextView
        android:text="Add Ingredient:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addIngredientTitle"
        android:layout_row="3"
        android:layout_column="0"
        android:gravity="center_vertical"
        android:textStyle="normal"
        android:textSize="36sp"
        android:layout_weight="2"
        android:layout_alignParentTop="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/addIngredientName"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_weight=".18"
        android:hint="Type the ingredient name here"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/addIngredientTitle"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save"
        android:layout_below="@+id/addIngredientName"
        android:layout_alignParentEnd="true"
        android:onClick="onClickSaveIngredient" />

</RelativeLayout>
